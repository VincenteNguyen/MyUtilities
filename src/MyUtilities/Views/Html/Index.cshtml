@model MyUtilities.Models.HttpBuilderModel
@{
    ViewData["Title"] = "Parse Html Form";
}
<h2>@ViewData["Title"]</h2>

<form asp-controller="Html" asp-action="ParseHtmlForm" method="post">
    <div class="form-horizontal">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="@Model.NameOfCollection" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="@Model.NameOfCollection" class="form-control" />
                <span asp-validation-for="@Model.NameOfCollection" class="text-danger"></span>
            </div>
        </div>

            <div class="form-group">
                <label asp-for="@Model.PageVariable" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="@Model.PageVariable" class="form-control" />
                    <span asp-validation-for="@Model.PageVariable" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="@Model.From" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="@Model.From" class="form-control" />
                    <span asp-validation-for="@Model.From" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="@Model.Parameter" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="@Model.Parameter" class="form-control" />
                    <span asp-validation-for="@Model.Parameter" class="text-danger"></span>
                </div>
            </div>

        <div class="form-group">
            <label asp-for="@Model.SourceValue" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <textarea asp-for="@Model.SourceValue" class="form-control"></textarea>
                <span asp-validation-for="@Model.SourceValue" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Execute" class="btn btn-default" />
                <a asp-action="Index" class="btn btn-default">Refresh</a>
            </div>
        </div>
    </div>
</form>
@if (!string.IsNullOrEmpty(Model.Result))
{
    <div class="alert alert-success" role="alert">Executed successfully!</div>
    <figure class="highlight">
<pre><code class="language-html" data-lang="html"><span>@Model.Result</span></code></pre>
    </figure>
}